{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
        "baseURL": "https://github.com/Araffe/vdc-networking-lab/blob/master/",
        "vmTemplateURL": "[concat(variables('baseURL'), 'VM.json')]",
        "storageAccountName": "[concat('storage', uniqueString(resourceGroup().id))]",
        "vnetTemplateURL": "[concat(variables('baseURL'), 'vdc-vnets.json')]",
        "vpnGWTemplateURL": "[concat(variables('baseURL'), 'vpnGW.json')]"
    },
     "resources": [
		{
			"comments": "Create 5 VNets - 1 hub, 3 spokes and 1 on-premise",
            "name": "vnets",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('vnetTemplateURL')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  "[variables('vnetParameters')]"
			}
		},
        {
            "comments": "create VNet peering - Hub_VNet1 <-> Spoke_VNet1",
            "name": "Hub-Spoke1-Peering",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(variables('baseURL'), 'vnetPeering.json')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "hubVnetName": { "value": "Hub_VNet1" },    
                    "spokeVnetName": { "value": "Spoke_VNet1" },
                    "useRemoteGateways": { "value": "true" } 
                }
			},
            "dependsOn": ["vnets"]
        },
        {
            "comments": "create VNet peering - Hub_VNet1 <-> Spoke_VNet2",
            "name": "Hub-Spoke2-Peering",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(variables('baseURL'), 'vnetPeering.json')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "hubVnetName": { "value": "Hub_VNet1" },    
                    "spokeVnetName": { "value": "Spoke_VNet2" },
                    "useRemoteGateways": { "value": "true" } 
                }
			},
            "dependsOn": ["vnets"]
        },
        {
            "comments": "create VNet peering - Hub_VNet1 <-> Spoke_VNet3",
            "name": "Hub-Spoke3-Peering",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(variables('baseURL'), 'vnetPeering.json')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "hubVnetName": { "value": "Hub_VNet1" },    
                    "spokeVnetName": { "value": "Spoke_VNet3" },
                    "useRemoteGateways": { "value": "true" } 
                }
			},
            "dependsOn": ["vnets"]
        },
        {
            "comments": "Create public IP address for VNet GW in Hub_VNet1",
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "Hub_Vnet1-gwPip",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
         {
            "comments": "Create public IP address for VNet GW in OnPrem_VNet",
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "OnPrem_Vnet-gwPip",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        }
     ]
}