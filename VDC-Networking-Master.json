{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
        "baseURL": "https://raw.githubusercontent.com/Araffe/vdc-networking-lab/master/",
        "vnetTemplateURL": "[concat(variables('baseURL'), 'vdc-vnets.json')]",
        "vnetPeeringTemplateURL": "[concat(variables('baseURL'), 'VNet-Peering.json')]",
        "vpnGwTemplateUri": "[concat(variables('baseURL'), 'vpn-gw.json')]",
         "vpnGwTemplateHub": {
                "vnetName": { "value": "Hub_VNet1" },
                "gwName": { "value": "Hub_GW1" },
                "PIPName": { "value": "Hub_VNet1-gwPip" }
        },
        "vpnGwTemplateOnPrem": {
                "vnetName": { "value": "OnPrem_VNet1" },
                "gwName": { "value": "OnPrem_GW1" },
                "PIPName": { "value": "OnPrem_VNet-gwPip" }
        }
    },
     "resources": [
		{
			"comments": "Create 5 VNets - 1 hub, 3 spokes and 1 on-premise",
            "name": "vnets",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('vnetTemplateURL')]",
					"contentVersion": "1.0.0.0"
				}
			}
		},
        {
            "comments": "create VNet peering - Hub_VNet1 to Spoke_VNet1",
            "name": "Hub-Spoke1-Peering",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('vnetPeeringTemplateURL')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "hubVnetName": { "value": "Hub_VNet1" },    
                    "spokeVnetName": { "value": "Spoke_VNet1" }
                }
			},
            "dependsOn": ["vnets"]
        },
        {
            "comments": "create VNet peering - Hub_VNet1 to Spoke_VNet2",
            "name": "Hub-Spoke2-Peering",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('vnetPeeringTemplateURL')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "hubVnetName": { "value": "Hub_VNet1" },    
                    "spokeVnetName": { "value": "Spoke_VNet2" }
                }
			},
            "dependsOn": ["vnets"]
        },
        {
            "comments": "create VNet peering - Hub_VNet1 to Spoke_VNet3",
            "name": "Hub-Spoke3-Peering",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('vnetPeeringTemplateURL')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "hubVnetName": { "value": "Hub_VNet1" },    
                    "spokeVnetName": { "value": "Spoke_VNet3" }
                }
			},
            "dependsOn": ["vnets"]
        },
        {
            "comments": "Create public IP address for VNet GW in Hub_VNet1",
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "Hub_VNet1-gwPip",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
         {
            "comments": "Create public IP address for VNet GW in OnPrem_VNet",
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "OnPrem_VNet-gwPip",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
			"comments": "Create VPN gateway in Hub_VNet1.",
			"name": "Hub_GW1",
            "type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-09-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('vpnGwTemplateUri')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": "[variables('vpnGwTemplateHub')]" 
            },
            "dependsOn": [
                "Hub_VNet1-gwPip",
                "vnets"                
            ]
        },
        {
			"comments": "Create VPN gateway in OnPrem_VNet1.",
			"name": "OnPrem_GW1",
            "type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-09-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('vpnGwTemplateUri')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": "[variables('vpnGwTemplateOnPrem')]" 
            },
            "dependsOn": [
                "OnPrem_VNet-gwPip",
                "vnets"                
            ]
        }
     ]
}